<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary</item>
        <item name="colorAccent">@color/primary</item>
        <item name="android:fontFamily">@font/iransanslight</item>
        <item name="android:textColor">@color/text1</item>
        <item name="android:layout_marginTop">0dp</item>

        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:scrollbarThumbVertical">@color/secondary</item>



    </style>
    <style name="menu_labels_style">
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="MaterialSearchBar" >

        <item name="mt_dividerColor">@color/blue</item>

        <item name="mt_textCursorTint">@color/searchBarCursorColor</item>
        <item name="mt_textColor">@color/pureWhite</item>

        <item name="mt_placeholderColor">@color/pureWhite</item>
        <item name="mt_highlightedTextColor">@color/searchBarTextHighlightColor</item>
    </style>
</resources>