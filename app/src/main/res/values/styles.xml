<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight">
        <!-- Customize your theme here. -->

        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/iransanslight</item>
        <item name="android:textColor">@color/text1</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:textColorSecondary">@color/text1_dark</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:scrollbarThumbVertical">@color/secondary</item>
        <item name="android:navigationBarColor">@color/nv_color</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:textCursorDrawable"> @drawable/ed_cursor</item>

        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>


    </style>

    <style name="CNC" parent="Theme.AppCompat.Light">

        <item name="colorPrimary">@color/fab_color</item>





        <item name="colorAccent">@color/fab_color</item>



    </style>

    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>


    <style name="menu_labels_style">
        <item name="android:textColor">@color/text1</item>
    </style>


    <style name="MaterialSearchBar" >

        <item name="mt_dividerColor">@color/blue</item>

        <item name="mt_textCursorTint">@color/searchBarCursorColor</item>
        <item name="mt_textColor">@color/pureWhite</item>

        <item name="mt_placeholderColor">@color/pureWhite</item>
        <item name="mt_highlightedTextColor">@color/searchBarTextHighlightColor</item>
    </style>
</resources>